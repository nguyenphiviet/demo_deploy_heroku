<div class="form_wrapper">
  <div class="container">

    <ul class="bg-bubbles">
      <li></li><li></li><li></li><li></li><li></li><li></li><li></li><li></li><li></li><li></li><li></li><li></li>
    </ul>

    <h1><%= t ".welcome" %></h1>

    <div class="col-sm-12">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

        <%= devise_error_messages! %>

        <%= f.email_field :email, placeholder: t(".email") %>

        <% if @minimum_password_length %>
          <%= f.password_field :password,
          placeholder: t(".min_pass", min_pass: @minimum_password_length) %>
        <% else %>
          <%= f.password_field :password, placeholder: t(".password") %>
        <% end %>

        <%= f.password_field :password_confirmation,
          placeholder: t(".password_confirm") %>

        <%= f.submit t(".button") %>
      <% end %>
    </div>

  </div>
</div>
