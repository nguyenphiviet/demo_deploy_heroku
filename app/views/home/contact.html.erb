<!--================Contact Area =================-->
<section class="contact_area">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <div class="contact_details">
          <h3 class="contact_title"><%= t ".info" %></h3>
          <%= t ".info_html" %>
          <div class="media">
            <div class="media-left">
              <i class="fa fa-map-marker"></i>
            </div>
            <div class="media-body">
              <h4><%= t ".address" %></h4>
              <h5><%= t ".address_content" %></h5>
            </div>
          </div>
          <div class="media">
            <div class="media-left">
              <i class="fa fa-phone"></i>
            </div>
            <div class="media-body">
              <h4><%= t ".phone" %></h4>
              <h5><%= t ".phone_content" %></h5>
            </div>
          </div>
          <div class="media">
            <div class="media-left">
              <i class="fa fa-envelope-o"></i>
            </div>
            <div class="media-body">
              <h4><%= t ".email" %></h4>
              <h5><%= t ".email_content" %></h5>
            </div>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="row contact_form_area">
          <h3 class="contact_title"><%= t ".send_message" %></h3>
          <%= render "contact_form" %>
          <div id="success">
            <p><%= t ".message_success" %></p>
          </div>
          <div id="error">
            <p><%= t ".message_wrong" %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!--================End Contact Area =================-->
